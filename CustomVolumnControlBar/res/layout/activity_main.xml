<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tao="http://schemas.android.com/apk/res/com.example.customvolumncontrolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >
    
    <com.example.customvolumncontrolbar.CustomVolumControlBar
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        tao:bg="@drawable/mm2"
        tao:circleWidth="20dp"
        tao:dotCount="20"
        tao:firstColor="#255335"
        tao:secondColor="#fdfdfd"
        tao:spliteSize="20"
        >
    </com.example.customvolumncontrolbar.CustomVolumControlBar>
    <com.example.customvolumncontrolbar.CustomVolumControlBar
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        tao:bg="@drawable/mm10"
        tao:circleWidth="10dp"
        tao:dotCount="10"
        tao:firstColor="#dd00ff"
        tao:secondColor="#00aa33"
        tao:spliteSize="15"
        >
    </com.example.customvolumncontrolbar.CustomVolumControlBar>
    <com.example.customvolumncontrolbar.CustomVolumControlBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom"
        tao:bg="@drawable/mm9"
        tao:circleWidth="10dp"
        tao:dotCount="8"
        tao:firstColor="#000aaa"
        tao:secondColor="#bbb000"
        tao:spliteSize="25"
        >
    </com.example.customvolumncontrolbar.CustomVolumControlBar>
	

</LinearLayout>
